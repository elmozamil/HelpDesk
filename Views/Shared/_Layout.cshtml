<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Help Desk</title>
    @Styles.Render("~/Content/TemplateCSS") 
    @Scripts.Render("~/bundles/TemplateJS")
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">HelpDesk</a>
            </div>

            <div class="col-md-3 col-lg-offset-3">
                @using (Html.BeginForm("Edit", "Tickets", FormMethod.Get, new { @class = "navbar-form navbar-left", role = "search" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group custom-search-form">
                        <input type="number" class="form-control" placeholder="Search by Ticket No" name="id" required min="1">

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                }
            </div>

            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-bell fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-ticket fa-fw"></i> New Tickets
                                    <span class="pull-right text-muted small">4</span>
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-check-circle fa-fw"></i> Completed
                                    <span class="pull-right text-muted small">14</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-alerts -->
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href=AssignedTickets?userName=@User.Identity.Name><i class="fa fa-user fa-fw"></i>Hello, @User.Identity.Name! </a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="~/Account/Login" id="logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="/"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-ticket fa-fw"></i> Tickets<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/NewTicket"><i class="fa fa-pencil-square-o"></i> New Ticket</a>
                                </li>
                                <li>
                                    <a href=~/AssignedTickets?userName=@User.Identity.Name><i class="fa fa-fire"></i> Assgined Tickets </a>
                                </li>
                                <li>
                                    <a href=~/MyTickets?userName=@User.Identity.Name><i class="fa fa-star-o"></i> My Tickets </a>
                                </li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fa fa-briefcase"></i> Department Tickets</a></li>
                                <li class="divider"></li>
                                <li><a href="/Tickets"><i class="fa fa-globe"></i> All</a></li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                      
                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> Asset Control<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#"><i class="fa fa-plus fa-fw"></i> New Asset</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa  fa-shield fa-fw"></i> Upgrade Asset</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-cogs fa-fw"></i> Admin Area<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Employees"><i class="fa fa-users fa-fw"></i> Employee Master</a>
                                </li>
                                <li>
                                    <a href="~/Users"><i class="fa fa-user-md fa-fw"></i> User Master</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-book fa-fw"></i> lookup configuration <span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="~/Types"><i class="fa fa-wrench fa-fw"></i> Types</a>
                                        </li>
                                        <li>
                                            <a href="~/Categories"><i class="fa fa-cog fa-fw"></i> Categories</a>
                                        </li>
                                        <li>
                                            <a href="~/Status"><i class="fa fa-bookmark fa-fw"></i> Status</a>
                                        </li>
                                        <li>
                                            <a href="~/Sites"><i class="fa fa-location-arrow fa-fw"></i> Sites</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i> Reports<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#"><i class="fa fa-file-o fa-fw"></i> Summary Report</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-file-o fa-fw"></i> Detail Report</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-file-o fa-fw"></i> Performance Report</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-file-o fa-fw"></i> Resolution Report</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-cubes fa-fw"></i> Configuration<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#"><i class="fa fa-envelope-o fa-fw"></i> Email Notification</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-eye-slash fa-fw"></i> SLA</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        @RenderSection("featured", required: false)
        <section id="page-wrapper">
            @RenderBody()
        </section>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
   
    @*<script src="../bower_components/morrisjs/morris.min.js"></script>*@
    @*<script src="../js/morris-data.js"></script>*@
    <!-- Custom Theme JavaScript -->
    

    @RenderSection("scripts", required: false)


    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year mztech.info</p>
        </div>
    </footer>

</body>


</html>
